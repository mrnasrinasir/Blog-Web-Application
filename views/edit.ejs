
<%- include("partials/header.ejs") %>

<div class = "container">

<div class ="editForm"> 
  <form action="/edit/<%= post.id %>" method="POST">

    <div class="form-group">
      <label for="postTile">Title</label>
      <input type="text" class="form-control" id="postTitle" name="postTitle" value = "<%= post.title %>">
    </div>

    <div class="form-group">
      <label for="postContent">Post</label>
      <textarea class="form-control" id="postContent" name="postContent" rows="10"><%= post.content %></textarea>
    </div>
</div> 

  <div class ="d-flex justify-content-between">
      <button type="submit" class="btn btn-default btn-primary">Save</button>
  </form>
<form action="/delete/<%= post.id %>" method="POST">
        <button type="submit" class = "btn btn-default btn-danger" >Delete</button>
      </form>
    </div>

  </div>
  </div>
</div>

