<%- include("partials/header.ejs") %>

<div class = "content">
  <div class = "container p-5">
  <form action="/compose" method="POST">
    <div class="form-group">
      <label for="postTile">Title</label>
      <input type="text" class="form-control" name="postTitle" placeholder="Enter Title" autofocus required>
    </div>

    <div class="form-group">
      <label for="postContent">Post</label>
      <textarea class="form-control" name="postContent" rows="10" autofocus required></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Publish</button>
  </form>

  </div>
</div>

<%- include("partials/footer.ejs") %>

<script>
  document.getElementById('postContent').addEventListener('keydown', function(event) {
    if (event.keyCode === 13) {
      event.preventDefault();
      this.value += '\n'; // Append a newline character
    }
  });
</script>